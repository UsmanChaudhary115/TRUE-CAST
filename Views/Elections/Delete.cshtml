@model OVS.Models.Election
@{
    ViewData["Title"] = "Delete Election";
    Layout = "_AdminSidelayout";
}

<div class="container py-5">
    <h1 class="fw-bold text-danger text-center">Delete Election</h1>
    <div class="card mx-auto" style="max-width: 600px; padding: 20px; border: none;">
        <h2>Are you sure you want to delete this election?</h2>
        <p><strong>Election Title:</strong> @Model.Title</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Start Date:</strong> @Model.StartDate.ToString("yyyy-MM-dd HH:mm")</p>
        <p><strong>End Date:</strong> @Model.EndDate.ToString("yyyy-MM-dd HH:mm")</p>
        <div>
            <form asp-action="DeleteConfirmed" asp-route-id="@Model.ElectionId" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger" aria-label="Confirm delete election">Delete</button>
            </form>
            <a asp-action="ElectionDashboardForAdmin" class="btn btn-secondary" aria-label="Cancel and return to dashboard">Cancel</a>
        </div>
    </div>
</div>
