@model OVS.Models.Candidate
@{
    ViewData["Title"] = "Add Candidate";
    Layout = "_AdminSidelayout";
}

<!-- Add Candidate Form -->
<div class="container mt-5">
    <h2>Add New Candidate</h2>
    <form method="post" action="@Url.Action("AddCandidate", "Candidate")">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" required />
        </div>
        <div class="form-group">
            <label for="PartyAffiliation">Party</label>
            <input type="text" class="form-control" id="PartyAffiliation" name="PartyAffiliation" required />
        </div>
        <div class="form-group">
            <label for="CNIC">CNIC</label>
            <input type="text" class="form-control" id="CNIC" name="CNIC" required />
        </div>
        <div class="form-group">
            <label for="ContactInfo">Contact Info</label>
            <input type="text" class="form-control" id="ContactInfo" name="ContactInfo" />
        </div>
        <div class="form-group">
            <label for="Manifesto">Manifesto</label>
            <textarea class="form-control" id="Manifesto" name="Manifesto"></textarea>
        </div>
        <button type="submit" class="btn btn-success mt-2">Add Candidate</button>
    </form>
</div>
