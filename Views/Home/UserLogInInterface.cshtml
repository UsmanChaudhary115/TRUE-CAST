<div class="container-fluid position-relative text-center py-5 position-relative justify-content-center align-content-center" id="ContactUs"
     style="background-image: url('@Url.Content("~/images/contact-3994013.jpg")');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height: 100vh;">
    <div class="row justify-content-center mg-">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg card-custom" style="border: none;">
                <div class="card-body p-2 text-white">
                    <h1 class="fw-bold text-primary text-center text-shadow">Contact Us</h1>
                    <form asp-action="SendMessage" method="post" class="mt-4">
                        <!-- Full Name -->
                        <div class="mb-4">
                            <label for="Name" class="form-label">Full Name</label>
                            <input type="text" class="form-control form-control-lg bg-transparent" id="Name" name="Name"
                                   placeholder="Enter your full name" required>
                        </div>
                        <!-- Email -->
                        <div class="mb-4">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control form-control-lg bg-transparent" id="Email" name="Email"
                                   placeholder="Enter your email" required>
                        </div>
                        <!-- Message -->
                        <div class="mb-4">
                            <label for="Message" class="form-label">Message</label>
                            <textarea class="form-control form-control-lg bg-transparent" id="Message" name="Message"
                                      rows="4" placeholder="Enter your message" required></textarea>
                        </div>
                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-custom w-100 py-3 fw-bold">Send Message</button>
                    </form>
                    <p class="text-center mt-4">
                        Need immediate help? Visit our
                        <a asp-action="ElectoinGuidelines" asp-controller="Elections" class="text-primary text-decoration-underline">FAQs page</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
