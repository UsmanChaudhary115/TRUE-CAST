@{
    ViewData["Title"] = "Admin Sign In";
    Layout = "_AdminSideLayout";
}

<div class="container-fluid" style="padding-top: 15vh; height:100vh;">
    <div class="row align-items-center" style="min-height: auto;">
        <!-- Text Section for Admins -->
        <div class="col-lg-6 col-md-12 d-flex justify-content-center align-items-center" style="text-align: center;">
            <div class="mx-auto" style="max-width: 600px; border-radius: 10px; background:none;">
                <div class="card-body text-center" style="color: white; padding: 20px;">
                    <h1 class="card-title" style="font-size: 2.5rem;">Hey, <span style="color: blue; font-family: Arial Black;">Admin</span></h1>
                    <p class="card-text" style="font-size: 1rem;">Access the admin panel using your email and password.</p>
                    <p class="card-text" style="font-size: 1rem;">Ensure your credentials are correct to avoid access issues.</p>
                </div>
            </div>
        </div>

        <!-- Form Section -->
        <div class="col-lg-6 col-md-12">
            <div class="text-center" style="padding-top: 20px; font-family: 'Times New Roman';">
                <h1 class="fw-bold text-primary" style="font-size: 1.5rem;">Admin Access</h1>

                <!-- Display TempData Message if Available -->
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-warning">
                        @TempData["Message"]
                    </div>
                    var count = @TempData.Remove("Message");
                }

                <form method="post" asp-controller="Admin" asp-action="AdminSignIn" class="p-3" style="max-width: 400px; margin: 0 auto;">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="Email" class="form-control" required placeholder="Enter your email">
                    </div>

                    <div class="mb-3">
                        <label for="Password" class="form-label">Password</label>
                        <input type="password" id="Password" name="Password" class="form-control" required placeholder="Enter your password">
                    </div>

                    <button type="submit" class="btn btn-custom w-100">Log In</button>
                </form>

                <p class="mt-3 text-center">Need help? <a href="#" class="text-primary">Contact Support</a></p>
            </div>
        </div>
    </div>
</div>
