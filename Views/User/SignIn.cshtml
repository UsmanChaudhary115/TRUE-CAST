@model OVS.Models.User
@{
    ViewData["Title"] = "Sign In";
    Layout = "_UserSidelayout";
}

<div class="container-fluid" style="padding-top: 15vh;">
    <div class="row align-items-center">
        <div class="col-lg-6 col-md-12">
            <div class="d-flex justify-content-center align-items-center" style="min-height: auto;">
                <div class="mx-auto" style="max-width: 600px; border-radius: 10px; background:none;">
                    <div class="card-body text-center text-light" style="padding: 20px;">
                        <h1 class="card-title display-4">
                            Welcome Back to <span style="color: blue; font-family: 'Arial Black';">True Cast</span>
                        </h1>
                        <p class="lead">Sign in to participate in secure elections.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-md-12">
            <div class="text-center" style="padding-top: 20px; font-family: 'Times New Roman';">
                <h1 class="fw-bold text-primary">Sign In</h1>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-warning mt-3">
                        @TempData["Message"]
                    </div>
                    var count = @TempData.Remove("Message");
                }

                <form asp-controller="User" asp-action="SignIn" method="post" class="p-3" style="max-width: 400px; margin: 0 auto;">
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter your email" required />
                        <label for="Email">Email Address</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter your password" required />
                        <label for="Password">Password</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Sign In</button>
                </form>

                <p class="mt-3 text-center">
                    Don't have an account?
                    <a asp-controller="User" asp-action="Register" class="text-decoration-none text-primary fw-bold">Register here</a>
                </p>
            </div>
        </div>
    </div>
</div>
